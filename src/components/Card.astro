---
const { style, h6, tekst, buttonProps } = Astro.props;
import "../styles/global.css/";
---

<article class={style}>
  <h6>{h6}</h6>
  <p>{tekst}</p>
</article>

<style>
  @layer components {
    article {
      padding: 46px;
      display: flex;
      flex-direction: column;
      gap: 36px;
      border-radius: 20px;
      backdrop-filter: blur(32px);
    }

    .primary {
      background: rgba(38.25, 38.25, 38.25, 0.9);
      border: 1px rgba(255, 255, 255, 0.2);
      color: var(--color-secondary2);
    }

    .secondary {
      background: var(--secondary-color-01);
      border: 1px #eaeaea;
      color: var(--secondary-color-01);
    }
  }

  article {
    h6 {
      color: var(--secondary-color-01);
      font-weight: 500;
      font-size: var(--step-0);
    }
    p {
      color: var(--secondary-color-01);
      font-weight: 300;
      font-size: var(--step--1);
    }
  }
  :root {
    --primary-color-01: #ffcc4a;
    --primary-color-02: #4eaf4e;
    --primary-color-03: #181818;
    --secondary-color-01: #f5f5f5;
    --secondary-color-02: #ffffff;
  }
</style>
