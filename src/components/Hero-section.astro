---
import { Image } from "astro:assets";
import sarah from "../assets/images/sarah.jpg";
import Card from "./Card.astro";
---

<section class="hero-section">
  <div class="tekst-knap">
    <div>
      <h1>Adam Buschemia Business Consultant</h1>
      <p>Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.</p>
    </div>
  </div>
  <Image alt="" src={sarah} />
  <div class="cards">
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Finance & Restructuring" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">Our Services</Card>
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Our Approach" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">More About</Card>
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Our Approach" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">Explore Our Solution</Card>
  </div>
</section>

<style>
  img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  @layer components {
    .hero-section {
      grid-column: full;
      display: grid;
      grid-template-columns: [full-start] 1fr [content] minmax(0, 600px) minmax(0, 600px) 1fr [full-end];
      grid-template-rows: 1fr auto auto;
      max-height: 90vh;
      overflow: hidden;

      .tekst-knap {
        grid-column: 1 / 3;
        grid-row: 1 / 3;
        display: grid;
        grid-template-columns: subgrid;
        background: var(--primary-color-03);
        color: var(--primary-color-03);

        > div {
          grid-column: content;
          align-self: start;
        }

        p {
          color: var(--secondary-color-01);
        }
      }

      img {
        grid-column: 3 / -1;
        grid-row: 1 / -2;
        width: 100%;
      }

      .cards {
        grid-column: 2 / -2;
        grid-row: 2 / 4;
        display: flex;
        gap: 20px;
        background: none;
      }
    }
    /* Responsive adjustments for screens below 900px */
    @media (max-width: 900px) {
      .hero-section {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto auto;
        max-height: auto;

        .tekst-knap {
          grid-column: 1 / -1;
          grid-row: 1;
          padding: 2rem;
          text-align: center;

          h1 {
            font-size: var(--step-2);
          }
        }

        img {
          grid-column: 1 / -1;
          grid-row: 2;
          width: 100%;
          height: auto;
        }

        .cards {
          grid-column: 1 / -1;
          grid-row: 3;
          flex-direction: column;
          gap: 10px;
          padding: 1rem;
          display: none;
        }
      }
    }
  }

  .tekst-knap h1 {
    color: var(--secondary-color-01);
    font-weight: var(--font-weight-700);
    margin-bottom: 32px;
    margin-top: 3rem;
    font-size: var(--step-3);
    font-weight: 700;
  }
</style>
