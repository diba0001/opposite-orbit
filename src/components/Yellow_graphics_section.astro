---
import "../styles/global.css/";
import "../styles/reset.css/";
---

<section class="Yellow_graphics_section">
  <div class="yellow_section_text">
    <div class="white_p"><p>EXPERIENCE</p></div>
    <h2>More than 25 years of experience</h2>
    <p>3000+ our clients are insured around the World</p>
  </div>
  <div class="circular_graphics">
    <div class="pie">
      <div class="parent" style="--percent: 95%">
        <div class="child_rotate"></div>
        <p class="center_pie_p">95%</p>
      </div>
      <p>Consistency</p>
    </div>
    <div class="pie">
      <div class="parent" style="--percent: 90%">
        <div class="child_rotate"></div>
        <p class="center_pie_p">90%</p>
      </div>
      <p>Improvement</p>
    </div>
    <div class="pie">
      <div class="parent" style="--percent: 80%">
        <div class="child_rotate"></div>
        <p class="center_pie_p">80%</p>
      </div>
      <p>Branching</p>
    </div>
  </div>

  <style>
    .center_pie_p {
      margin-top: 2.5rem;
    }

    .pie p {
      text-align: center;
      padding-top: 15px;
      font-weight: 700;
      font-size: var(--step-0);
    }

    .circular_graphics {
      display: flex;
      padding: 100px;
      gap: 2rem;
    }

    @property --percent {
      syntax: "<percentage>";
      inherits: true;
      initial-value: 0%;
    }

    .parent {
      --offset-pos: 5px;
      border: var(--offset-pos) solid transparent;
      background:
        linear-gradient(#ffcc4a 0 0) padding-box,
        conic-gradient(white var(--percent), rgb(189, 184, 184) 0) border-box;
      position: relative;
    }

    .child_rotate {
      aspect-ratio: 1;
      border-radius: 99px;
      width: 20px;
      background: black;
      position: absolute;
      offset-path: border-box;
      offset-distance: var(--percent);
      offset-anchor: 50% calc(50% - var(--offset-pos) / 2);
    }

    @keyframes --pie {
      to {
        --percent: 100%;
      }
    }

    .parent {
      aspect-ratio: 1;
      width: 150px;
      border-radius: 1e5px;
      margin-inline: auto;
    }

    .Yellow_graphics_section {
      background-color: #ffcc4a;
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
    }

    .yellow_section_text {
      padding: 5rem;
      h2 {
        font-size: var(--step-1);
        font-weight: 700;
        width: 300px;
        margin-top: 1rem;
      }

      p {
        font-size: var(--step--2);
        margin-top: 1rem;
      }
    }

    .white_p {
      background-color: white;
      align-self: start;
      border-radius: 10px;
      max-width: 105px;

      p {
        color: black;
        font-size: var(--step--1);
        padding: 5px;
      }
    }

    /* Media Query for devices with width below 900px */
    @media (max-width: 900px) {
      .Yellow_graphics_section {
        flex-direction: column;
        align-items: center;
        padding: 2rem;
      }

      .yellow_section_text {
        padding: 2rem;
        text-align: center;

        h2 {
          width: auto;
          margin-top: 1rem;
        }
      }

      .circular_graphics {
        padding: 2rem;
        gap: 1.5rem;
        flex-direction: column;
        align-items: center;
      }

      .pie {
        width: 100%;
        max-width: 200px;
      }

      .parent {
        width: 100%;
      }
    }
  </style>
</section>
