---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import daisy from "../assets/images/daisy.jpg";
import EmployeeCard from "../components/EmployeeCard.astro";
import EmployeeSection from "../components/EmployeeSection.astro";
import { Icon } from "astro-icon/components";
import WhatToExpect from "../components/WhatToExpect.astro";
import ContactUs_ItsEasy from "../components/ContactUs-ItsEasy.astro";
import YellowGraphicsSection from "../components/Yellow_graphics_section.astro";
import Scrolling_container from "../components/Scrolling_container.astro";
import { cardContent } from "../data/card-content.js";
import HeroSection from "../components/Hero-section.astro";
import CorevaluesSection from "../components/CorevaluesSection.astro";
import CorevaluesCard from "../components/CorevaluesCard.astro";
const corevalueData = await fetch("https://raw.githubusercontent.com/espi0001/frontend-design/main/resources/json/corevalues.json").then((res) => res.json());
/* const employeeData = await fetch("https://raw.githubusercontent.com/diba0001/frontend-design/main/resources/json/employees.json").then((res) => res.json()); */
---

<!-- <Image alt="XXX" src="XXX" format="" /> -->
<Layout title="Home">
  <EmployeeCard img="/src/assets/images/XXX.jpg" />
  <EmployeeCard />
  <HeroSection />
  <WhatToExpect />
  <Scrolling_container data={cardContent} />
  <YellowGraphicsSection />
  <CorevaluesSection data={corevalueData} background="white" tagProps={{ style: "secondary" }} buttonProps1={{ style: "primary" }}>Growing with our Clients</CorevaluesSection>
  <ContactUs_ItsEasy />
</Layout>

<style>
  [data-icon="XXX.svg"] {
    width: 24px;
    height: 24px;
  }
</style>
